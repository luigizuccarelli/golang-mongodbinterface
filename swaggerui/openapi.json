          "500": {
            "description": "Error response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Response"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/dbservice/api/v1/index": {
      "post": {
        "summary": "Api call that indexes the document store for efficient queries",
        "operationId": "dbindex",
        "responses": {
          "200": {
            "description": "Migrate to the document store database",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
