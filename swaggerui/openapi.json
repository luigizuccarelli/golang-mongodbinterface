          }
        }
      }
    },
    "/dbservice/api/v1/specific": {
      "post": {
        "summary": "Api call that calls the Tradsmiths API and does specific mapping to stock items",
        "operationId": "dbspecific",
        "requestBody": {
          "description": "Stock schema data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
